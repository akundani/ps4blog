
<table class="table">
    <thead>
        <td>Title</td>
        <td>Author</td>
        <td>Word Count</td>
    </thead>
    <tbody>
        <% @posts.each do|post|  %>
        <tr>
            <td><%=link_to post.title, post_path(post.id) %></td>
            <td><%=post.creator_email%></td>
            <td><%=post.word_count %></td>
        </tr>

        <% end %>
    </tbody>
</table>
